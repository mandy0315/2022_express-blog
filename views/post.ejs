<% extend('./layouts/layout') %>

<div class="hex-blog">
  <nav class="pl-0 breadcrumb">
    <a class="text-primary breadcrumb-item" href="/">Home</a>
    <a
      class="text-primary breadcrumb-item"
      href="/categories/<%- articleInfo.category.toLowerCase() %>"
      >
        <%- articleInfo.category %>
      </a
    >
    <span class="breadcrumb-item active"><%- articleInfo.title || '' %></span>
  </nav>
  <div class="row justify-content-center">
    <div class="col-md-9">
      <!-- artical header -->
      <h1 class="text-primary"><%- articleInfo.title || '' %></h1>
      <div class="flex-row text-secondary d-flex small">
        <div class="p-2">
          <i class="fa fa-user-o" aria-hidden="true"></i> 卡斯伯
        </div>
        <div class="p-2">
          <%- dayjs(articleInfo.update_time).format("YYYY/MM/DD") %>
        </div>
        <div class="p-2">
          <i class="fa fa-tag" aria-hidden="true"></i>
          <a
            href="/categories/<%- articleInfo.category.toLowerCase() %>"
            class="text-info"
            >
            <%- articleInfo.category %>
          </a
          >
        </div>
      </div>
      <article class="text-dark mb-4 post">
        <%- striptags(articleInfo.content).slice(0,150) %> 
        <% if(striptags(articleInfo.content).length > 150){ %> ... <%}%>
      </article>
      <!-- 留言 -->
      <div class="mb-3 card">
        <div class="card-body"></div>
      </div>
    </div>
  </div>
</div>

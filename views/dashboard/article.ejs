<% layout('/dashboard/layout') %>
<form method="POST" class="row justify-content-center">
  <div class="col-md-6">
    <label for="title">請輸入標題</label>
    <input
      type="text"
      id="title"
      class="form-control"
      name="title"
      placeholder="標題"
      value=""
    />
    <hr />
    <textarea name="content" id="editor" class="form-control"> </textarea>
    <script>
      CKEDITOR.replace("content");
    </script>
  </div>
  <div class="col-md-3">
    <div class="mb-3 card">
      <h6 class="card-header">分類</h6>
      <div class="card-body">
        <div class="form-check">
          <label class="form-check-label">
            <input
              class="form-check-input"
              type="radio"
              name="category"
              required
              value="-L2TajOWL1ycB_hwyiK-"
            />
            心得
          </label>
        </div>

        <div class="form-check">
          <label class="form-check-label">
            <input
              class="form-check-input"
              type="radio"
              name="category"
              required
              value="-L2VDz-ovFCKMA34kfdY"
            />
            課程
          </label>
        </div>

        <div class="form-check">
          <label class="form-check-label">
            <input
              class="form-check-input"
              type="radio"
              name="category"
              required
              value="-L3VkF87JcRmUUjxhi0g"
            />
            新聞
          </label>
        </div>
      </div>
    </div>

    <div class="mb-3 card">
      <h6 class="card-header">是否公開</h6>
      <div class="card-body">
        <div class="w-100 btn-group btn-group-toggle" data-toggle="buttons">
          <label class="w-100 btn btn-outline-primary">
            <input
              type="radio"
              name="status"
              autocomplete="off"
              value="draft"
            />
            草稿
          </label>
          <label class="w-100 btn btn-outline-primary">
            <input
              type="radio"
              name="status"
              autocomplete="off"
              value="public"
            />
            公開
          </label>
        </div>
      </div>
    </div>

    <div class="w-100 btn-group">
      <button type="submit" class="w-100 btn btn-outline-primary">儲存</button>
    </div>
  </div>
</form>

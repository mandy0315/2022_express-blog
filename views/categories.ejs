<% extend('./layouts/layout') %>

<div class="my-4 row justify-content-center">
  <div class="col-md-9">
    <h1 class="text-primary pb-2">分類</h1>
    <ul class="list-unstyled">
      <% categoriesInfo.forEach((item) =>{ %> 
        <% if(filterArticlesInfo[item.id]) {%>
          <li class="h5">
            <a href="/categories/<%- item.name.toLowerCase() %>" >
              <%- item.name %> (<%- filterArticlesInfo[item.id].length %>)
            </a>
          </li>
        <%}%> 
      <%})%>
    </ul>
  </div>
</div>
